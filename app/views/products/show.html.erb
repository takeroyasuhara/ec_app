<% provide(:title, @product.title) %>
<h1>
  <%= @product.title %>
</h1>

<h2>
  <%= @product.description %>
  <%= @product.price %>

  <%= form_for(current_user.cart_items.build(product_id: @product.id)) do |f| %>
    <div><%= f.hidden_field :product_id %>
    </div>
    <%= f.select :asking_quantity,
    options_for_select(["1", "2", "3", "4", "5", "6", "7", "8"]) %>

    <%= f.submit "カート追加", class: "btn btn-large btn-primary" %>
    <% end %>

</h2>
